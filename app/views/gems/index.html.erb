<div id="gems" class="list">
  <h1 class="title shadow">Gems</h1>
  <% unless @rubygems.empty? %>
  <ul>
  <% for rubygem in @rubygems %>
  <li class="">
    <a href="<%= gem_path(rubygem) %>">
      <span class=""></span><strong><%= rubygem.name_with_version %></strong><br><%= rubygem.summary %>
    </a>
  </li>
  <% end %>
  </ul>
  <% else %>
  <div class="box">
    <p class="shadow">You haven't added any gems yet. You can <%= link_to "upload", new_gem_path %> it now.</p>
  </div>
  <% end %>
</div>